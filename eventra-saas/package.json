{
  "name": "eventra-saas",
  "version": "0.1.0",
  "private": true,
  "description": "A modern event management platform built with Next.js 15, TypeScript, and Prisma",
  "author": "Your Name",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "typescript",
    "event-management",
    "saas",
    "prisma",
    "tailwindcss"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:deploy": "prisma migrate deploy",
    "db:setup": "npm run db:deploy && npm run db:seed",
    "db:studio": "prisma studio",
    "clean": "rimraf .next out",
    "i18n:check": "node scripts/validate-i18n.js",
    "import:events:csv": "tsx scripts/csv-to-events-json.ts",
    "test": "echo \"No tests specified\" && exit 0",
    "prebuild": "echo skipping type-check and lint for build",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.1",
    "@prisma/client": "^6.16.2",
    "bcryptjs": "^3.0.2",
    "csv-parse": "^6.1.0",
    "next": "15.5.3",
    "next-auth": "^4.24.11",
    "next-intl": "^4.3.9",
    "next-pwa": "^5.6.0",
    "prisma": "^6.16.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typescript": "^5"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=18"
  }
}
